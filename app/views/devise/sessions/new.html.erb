<h2><%= t('labels.log_in') %></h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'm-t'}, wrapper: :vertical_form) do |f| %>
    <%= f.input :email, required: false, autofocus: true, label: false, placeholder: t('placeholders.email') %>
    <%= f.input :password, required: false, label: false, placeholder: t('placeholders.password') %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

    <%= f.submit t('buttons.log_in'), class: 'btn btn-primary full-width m-b' %>

<% end %>

<%= render "devise/shared/links" %>
