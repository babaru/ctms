<div class="btn-toolbar">
    <div class="btn-group">
        <%= link_to(Execution.result_names[ExecutionResult.enums.passed], plan_round_path(@round, plan_id: @round.plan_id, project_id: params[:project_id], issue_id: params[:issue_id], no_label: params[:no_label], label_id: params[:label_id], page: params[:page], execution_result: ExecutionResult.enums.passed), class: "btn btn-white #{@execution_result && @execution_result == ExecutionResult.enums.passed.to_s ? 'active' : ''}") %>
        <%= link_to(Execution.result_names[ExecutionResult.enums.failed], plan_round_path(@round, plan_id: @round.plan_id, project_id: params[:project_id], issue_id: params[:issue_id], no_label: params[:no_label], label_id: params[:label_id], page: params[:page], execution_result: ExecutionResult.enums.failed), class: "btn btn-white #{@execution_result && @execution_result == ExecutionResult.enums.failed.to_s ? 'active' : ''}") %>
        <%= link_to(Execution.result_names[ExecutionResult.enums.na], plan_round_path(@round, plan_id: @round.plan_id, project_id: params[:project_id], issue_id: params[:issue_id], no_label: params[:no_label], label_id: params[:label_id], page: params[:page], execution_result: ExecutionResult.enums.na), class: "btn btn-white #{@execution_result && @execution_result == ExecutionResult.enums.na.to_s ? 'active' : ''}") %>
        <%= link_to(Execution.result_names[ExecutionResult.enums.unexecuted], plan_round_path(@round, plan_id: @round.plan_id, project_id: params[:project_id], issue_id: params[:issue_id], no_label: params[:no_label], label_id: params[:label_id], page: params[:page], unexecuted: true), class: "btn btn-white #{@unexecuted ? 'active' : ''}") %>
        <%= link_to(t('buttons.all_execution_results'), plan_round_path(@round, plan_id: @round.plan_id, project_id: params[:project_id], issue_id: params[:issue_id], no_label: params[:no_label], label_id: params[:label_id], page: params[:page]), class: "btn btn-white #{@execution_result.nil? && @unexecuted.nil? ? 'active' : ''}") %>
    </div>
</div>
