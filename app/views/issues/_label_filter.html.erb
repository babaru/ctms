<div class="btn-toolbar m-b">
    <div class="btn-group">
        <%= link_to t('buttons.all_labels'), project_issue_path(@issue, project_id: @issue.project_id, page: params[:page]), class: "btn btn-white btn-sm #{@no_label.nil? && @current_label.nil? ? 'active' : ''}" %>
        <%= link_to t('buttons.no_label'), project_issue_path(@issue, project_id: @issue.project_id, no_label: true, page: params[:page]), class: "btn btn-white btn-sm #{@no_label ? 'active' : ''}" %>
    </div>

    <div class="btn-group">
        <% Label.used_by_scenarios(@issue.project_id).each do |label| %>
        <%= link_to label.name, project_issue_path(@issue, project_id: @issue.project_id, page: params[:page], label_id: label.id), class: "btn btn-white btn-sm #{(@current_label && label.id == @current_label.id) ? 'active' : ''}" %>
        <% end %>
    </div>
</div>
