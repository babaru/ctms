<div class="row page-heading">
    <div class="col-lg-10">
        <h2><%= Issue.model_name.human %></h2>
        <ol class="breadcrumb">
            <li>
                <%= fa_icon('home') %>
            </li>
            <li class="active">
                <strong><%= t('activerecord.text.list', model: Issue.model_name.human) %></strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2 m-t-lg">
        <div class="btn-group pull-right">
            <button type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="btn btn-white">
                <%= fa_icon('cog') %> <span class="caret"></span>
                <span class="sr-only">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu">
                <li role="separator" class="divider"></li>
                <li><%= link_to t('activerecord.text.new_instance', model: Issue.model_name.human), new_issue_path %></li>
            </ul>
        </div>
    </div>
</div>

<div class="wrapper wrapper-content p-w-xs">
    <div class="row">
        <div class="col-lg-10">
            <div class="ibox">
                <div class="ibox-content">

                    <div class="table-responsive">
                        <%= render partial: 'issues_grid' %>
                    </div>
                </div>

            </div>
        </div>

        <div class="col-lg-2">
            <div class="ibox">
                <div class="ibox-title">
                    <h5><%= t('labels.search') %></h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content" style="display: block;">
                    <%= render 'search_form' %>
                </div>
            </div>
        </div>

    </div>
</div>
