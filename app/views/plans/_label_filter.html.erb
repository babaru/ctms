<div class="btn-toolbar m-b">
    <div class="btn-group">
        <%= link_to t('buttons.all_labels'), plan_path(@plan, project_id: params[:project_id], issue_id: params[:issue_id], page: params[:page], unexecuted: params[:unexecuted], executed: params[:executed]), class: "btn btn-white btn-sm #{@no_label.nil? && @label.nil? ? 'active' : ''}" %>
        <%= link_to t('buttons.no_label'), plan_path(@plan, project_id: params[:project_id], issue_id: params[:issue_id], no_label: true, page: params[:page], unexecuted: params[:unexecuted], executed: params[:executed]), class: "btn btn-white btn-sm #{@no_label ? 'active' : ''}" %>
    </div>

    <div class="btn-group">
        <% Label.used_by_scenarios(@project).each do |label| %>
        <%= link_to label.name, plan_path(@plan, project_id: params[:project_id], issue_id: params[:issue_id], page: params[:page], label_id: label.id, unexecuted: params[:unexecuted], executed: params[:executed]), class: "btn btn-white btn-sm #{(@label && label.id == @label.id) ? 'active' : ''}" %>
        <% end %>
    </div>

    <div class="btn-group">
        <%= link_to(Execution.result_names[ExecutionResult.enums.passed], plan_path(@plan, project_id: params[:project_id], issue_id: params[:issue_id], no_label: params[:no_label], label_id: params[:label_id], page: params[:page], execution_result: ExecutionResult.enums.passed), class: "btn btn-white btn-sm #{@execution_result && @execution_result == ExecutionResult.enums.passed.to_s ? 'active' : ''}") %>
        <%= link_to(Execution.result_names[ExecutionResult.enums.failed], plan_path(@plan, project_id: params[:project_id], issue_id: params[:issue_id], no_label: params[:no_label], label_id: params[:label_id], page: params[:page], execution_result: ExecutionResult.enums.failed), class: "btn btn-white btn-sm #{@execution_result && @execution_result == ExecutionResult.enums.failed.to_s ? 'active' : ''}") %>
        <%= link_to(Execution.result_names[ExecutionResult.enums.na], plan_path(@plan, project_id: params[:project_id], issue_id: params[:issue_id], no_label: params[:no_label], label_id: params[:label_id], page: params[:page], execution_result: ExecutionResult.enums.na), class: "btn btn-white btn-sm #{@execution_result && @execution_result == ExecutionResult.enums.na.to_s ? 'active' : ''}") %>
        <%= link_to(Execution.result_names[ExecutionResult.enums.undone], plan_path(@plan, project_id: params[:project_id], issue_id: params[:issue_id], no_label: params[:no_label], label_id: params[:label_id], page: params[:page], unexecuted: true), class: "btn btn-white btn-sm #{@unexecuted ? 'active' : ''}") %>
        <%= link_to(t('buttons.all_execution_results'), plan_path(@plan, project_id: params[:project_id], issue_id: params[:issue_id], no_label: params[:no_label], label_id: params[:label_id], page: params[:page]), class: "btn btn-white btn-sm #{@execution_result.nil? && @unexecuted.nil? ? 'active' : ''}") %>
    </div>
</div>
