<div class="row page-heading">
    <div class="col-lg-10">
        <h2><%= @plan.name if @plan.respond_to? :name %> <%= plan_state_label(@plan) %></h2>
        <ol class="breadcrumb">
            <li>
                <%= fa_icon('home') %>
            </li>
            <li class="active">
                <strong><%= t('activerecord.text.show', model: Plan.model_name.human) %></strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2 m-t-lg">
        <div class="btn-group pull-right">
            <button type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="btn btn-white">
                <%= fa_icon('cog') %> <span class="caret"></span>
                <span class="sr-only">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu">
                <li><%= finish_plan_button(@plan) %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to fa_icon('pencil', text: t('buttons.edit')), edit_plan_path(@plan) %></li>
            </ul>
        </div>
    </div>
</div>

<div class="tabs-container">
    <ul class="nav nav-tabs">
        <% @tabs.each do |tab| %>
        <% if @current_tab == tab %>
        <li class="active">
        <% else %>
        <li class="">
        <% end %>
            <%= link_to t("activerecord.attributes.plan.tabs.#{tab}"), plan_path(@plan, tab: tab) %>
        </li>
        <% end %>
    </ul>

    <div class="tab-content">
        <% @tabs.each do |tab| %>
        <% if @current_tab == tab %>
        <div class="tab-pane active">
        <% else %>
        <div class="tab-pane">
        <% end %>
            <div class="panel-body">
                <%= render "show_tab_#{tab}" if tab == @current_tab %>
            </div>
        </div>
        <% end %>
    </div>
</div>
