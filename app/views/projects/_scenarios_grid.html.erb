<div class="btn-toolbar m-b">
    <%= link_to t('buttons.all_labels'), project_path(@project, tab: @current_tab), class: "btn btn-white btn-sm" %>
    <div class="btn-group">
        <% Label.used_by_scenarios(@project).each do |label| %>
        <%= link_to label.name, project_path(@project, tab: @current_tab, label_id: label.id), class: "btn btn-white btn-sm #{(@current_label && label.id == @current_label.id) ? 'active' : ''}" %>
        <% end %>
    </div>
</div>


<%= datagrid_table(@scenarios_grid, html: { class: 'table table-hover table-bordered datagrid' }) %>
<%= paginate @scenarios_grid.assets %>
