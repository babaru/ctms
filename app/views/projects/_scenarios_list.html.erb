<% if @issue %>
<div class="row m-b-sm m-t-sm">
    <div class="col-lg-8">
        <h3><%= @issue.title %></h3>
    </div>
    <div class="col-lg-4">
        <div class="toolbar m-b-xs pull-right">
            <%= link_to fa_icon('plus', text: t('activerecord.text.new_instance', model: Scenario.model_name.human)), new_issue_scenario_path(@issue), class: 'btn-primary btn btn-sm' %>
        </div>
    </div>
</div>


<%= datagrid_table(@scenarios_grid, html: { class: 'table table-hover datagrid' }) %>
<%= paginate @scenarios_grid.assets %>
<% end %>
