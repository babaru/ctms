<div class="row page-heading">
    <div class="col-lg-8">
        <h2><%= Project.model_name.human %></h2>
        <ol class="breadcrumb">
            <li>
                <%= fa_icon('home') %>
            </li>
            <li class="active">
                <strong><%= t('activerecord.text.list', model: Project.model_name.human) %></strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-4 m-t-lg">
        <div class="btn-group pull-right">
            <button type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="btn btn-white">
                <%= fa_icon('cog') %> <span class="caret"></span>
                <span class="sr-only">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu">
                <li><%= link_to fa_icon('refresh', text: t('activerecord.text.sync_from_gitlab', model: Project.model_name.human)), sync_projects_from_gitlab_path(redirect_url: request.original_fullpath), method: :post%></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to fa_icon('plus', text: t('activerecord.text.new_instance', model: Project.model_name.human)), new_project_path %></li>
            </ul>
        </div>
    </div>
</div>

<div class="wrapper wrapper-content p-w-xs" style="padding-bottom: 20px;">
    <div class="tabs-container">
        <ul class="nav nav-tabs">
            <% @list_tabs.each do |tab| %>
            <% if @current_tab == tab %>
            <li class="active">
            <% else %>
            <li class="">
            <% end %>
                <%= link_to t("activerecord.attributes.projects.tabs.#{tab}"), projects_path(tab: tab) %>
            </li>
            <% end %>
        </ul>

        <div class="tab-content">
            <% @list_tabs.each do |tab| %>
            <% if @current_tab == tab %>
            <div class="tab-pane active">
            <% else %>
            <div class="tab-pane">
            <% end %>
                <div class="panel-body">
                    <%= render "list_tab_#{tab}" if tab == @current_tab %>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>
