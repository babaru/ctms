<%= simple_form_for(@scenario, html: { class: 'form-horizontal' } ) do |f| %>
  <%= f.error_notification %>

  <%= f.input :project_id, as: :hidden %>
  <%= f.input :issue_id, as: :hidden %>

  <%= f.input :name, label: t('activerecord.attributes.general.name') %>
  <div class="hr-line-dashed"></div>

  <%= f.input :body, input_html: { rows: 20 } %>
  <div class="hr-line-dashed"></div>

  <div class="form-group">
      <div class="pull-right m-r-md">
          <%= f.submit t('buttons.save'), class: 'btn btn-primary btn-w-m' %>
      </div>
      <div class="m-l-md">
        <%= link_to t('activerecord.text.show', model: Scenario.model_name.human), scenario_path(@scenario), class: 'btn btn-white' %>
      </div>
  </div>
<% end %>
